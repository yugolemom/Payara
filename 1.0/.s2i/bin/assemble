#!/bin/bash

# MAINTAINER Hugo C. Lima <yugolemom@gmail.com>

echo "Assemble"

#CONFIG PAYARA WEB SERVER


cat <<- EOF > /opt/tmpfile
AS_ADMIN_PASSWORD=
AS_ADMIN_NEWPASSWORD=$ADMIN_PASSWORD
EOF

cat <<- EOF > /opt/pwdfile
AS_ADMIN_PASSWORD=$ADMIN_PASSWORD
EOF


$PAYARA_PATH/bin/asadmin start-domain 
$PAYARA_PATH/bin/asadmin --user $ADMIN_USER --passwordfile=/opt/tmpfile change-admin-password
$PAYARA_PATH/bin/asadmin --user $ADMIN_USER --passwordfile=/opt/pwdfile enable-secure-admin 
$PAYARA_PATH/bin/asadmin stop-domain

rm /opt/tmpfile
rm /opt/pwdfile
rm /opt/$PKG_FILE_NAME
