#!/bin/bash

# MAINTAINER Hugo C. Lima <yugolemom@gmail.com>

echo "Assemble"

#CONFIG PAYARA WEB SERVER


cat <<- EOF > tmpfile
AS_ADMIN_PASSWORD=
AS_ADMIN_NEWPASSWORD=$ADMIN_PASSWORD
EOF

cat <<- EOF > pwdfile
AS_ADMIN_PASSWORD=$ADMIN_PASSWORD
EOF


asadmin start-domain 
asadmin --user $ADMIN_USER --passwordfile=tmpfile change-admin-password
asadmin --user $ADMIN_USER --passwordfile=pwdfile enable-secure-admin 
asadmin stop-domain

rm tmpfile
rm pwdfile
rm /usr/local/$PKG_FILE_NAME
