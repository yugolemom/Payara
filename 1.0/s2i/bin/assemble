#!/bin/bash

# MAINTAINER Hugo C. Lima <yugolemom@gmail.com>

echo "Assemble"

#CONFIG PAYARA WEB SERVER

cd $PAYARA_PATH/bin

cat <<- EOF > tmpfile
AS_ADMIN_PASSWORD=
AS_ADMIN_NEWPASSWORD=$ADMIN_PASSWORD
EOF

cat <<- EOF > pwdfile
AS_ADMIN_PASSWORD=$ADMIN_PASSWORD
EOF


exec asadmin start-domain 
exec asadmin --user $ADMIN_USER --passwordfile=tmpfile change-admin-password
exec asadmin --user $ADMIN_USER --passwordfile=pwdfile enable-secure-admin 
exec asadmin restart-domain

rm tmpfile
rm pwdfile
rm /opt/$PKG_FILE_NAME
